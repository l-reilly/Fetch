<div id="form">
  <h2>Edit your pet {{user.pet.name}}</h2>
  <form action="/profile/pets/{{_id}}/edit" method="POST">
 
    <label> Email
      <input type="text" name="email" placeholder="@email.com" required/>
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" required/>
    </label>

       <label> Name
      <input type="text" name="name" placeholder="name" required/>
    </label>

      <label> City
      <input type="text" name="city" placeholder="Jakarta" required/>
    </label>
 
 
    <button type="submit">Create account</button>
 
    {{#if err}}
      <p>{{err}}</p>
    {{/if}}
    
  </form>
</div>
<h2>{{user.pet.name}}</h2>
<img src={{user.pet.photo}}> 
<p>{{user.pet.age}}</p>
<p>{{user.pet.description}}</p>
<p>{{user.pet.breed}}</p>
<p>{{user.pet.city}}</p>
<p>{{user.pet.playDay}}</p>
<p>{{user.pet.playTime}}</p>
<p>{{user.pet.address}}</p>
<p>{{user.pet.adoption}}</p>