<div id="form">
  <h2>Login</h2>
  <form action="/login" method="POST">
 
    <label> Email
      <input type="text" name="email" placeholder="@email.com" required />
    </label>
 
    <label> Password
      <input type="password" name="password" placeholder="********" required/>
    </label>
 
    <button type="submit">Login</button>
    
    {{#if err}}
        <p>{{err}}</p>
    {{/if}}

  </form>
</div>
